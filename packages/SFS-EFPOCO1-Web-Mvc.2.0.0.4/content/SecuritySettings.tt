            bo = SFSdotNet.Framework.Security.BR.secBusinessObjectsBR.Instance.GetBy(p=>p.BusinessObjectKey == "<#= entity.Name #>" && p.secModule.ModuleKey == module.ModuleKey ).FirstOrDefault();
